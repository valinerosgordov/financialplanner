<Window x:Class="NexusFinance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="NEXUS FINANCE | Quant Terminal" 
        Height="900" Width="1600"
        Background="#050505"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="#CC1E1E1E" 
            CornerRadius="8" 
            BorderThickness="1" 
            BorderBrush="#505050"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="#CC121212" Padding="20" BorderBrush="#303030" BorderThickness="0,0,1,0">
                <StackPanel>
                    <!-- LOGO -->
                    <TextBlock Text="âš¡ NEXUS" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#E0E0E0"
                              Margin="0,0,0,40"/>
                    
                    <!-- NAVIGATION -->
                    <Button Command="{Binding NavigateToDashboardCommand}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" x:Name="ActiveIndicator" Background="Transparent" CornerRadius="2"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Dashboard"/>
                            </StackPanel>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveView}" Value="Dashboard">
                                        <Setter Property="Background" Value="#CC2A2A2A"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding NavigateToProjectsCommand}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Transparent" CornerRadius="2"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="ðŸš€" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Projects"/>
                            </StackPanel>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveView}" Value="Projects">
                                        <Setter Property="Background" Value="#CC2A2A2A"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding NavigateToWalletCommand}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Transparent" CornerRadius="2"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="ðŸ‘›" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Wallet"/>
                            </StackPanel>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveView}" Value="Wallet">
                                        <Setter Property="Background" Value="#CC2A2A2A"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding NavigateToAnalyticsCommand}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Transparent" CornerRadius="2"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Analytics"/>
                            </StackPanel>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveView}" Value="Analytics">
                                        <Setter Property="Background" Value="#CC2A2A2A"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding NavigateToLiquidityCommand}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Transparent" CornerRadius="2"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="ðŸ’§" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Liquidity"/>
                            </StackPanel>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveView}" Value="Liquidity">
                                        <Setter Property="Background" Value="#CC2A2A2A"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding NavigateToNeuralCfoCommand}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Transparent" CornerRadius="2"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="ðŸ¤–" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Neural CFO"/>
                            </StackPanel>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveView}" Value="AI">
                                        <Setter Property="Background" Value="#CC2A2A2A"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding NavigateToSettingsCommand}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Transparent" CornerRadius="2"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Settings"/>
                            </StackPanel>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveView}" Value="Settings">
                                        <Setter Property="Background" Value="#CC2A2A2A"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- SPACER -->
                    <Border Height="40"/>
                    
                    <!-- ADD TRANSACTION - TITANIUM SILVER GRADIENT -->
                    <Button Command="{Binding ShowTransactionInputCommand}"
                           Foreground="Black"
                           BorderBrush="#808080"
                           BorderThickness="1"
                           Padding="15"
                           FontSize="14"
                           FontWeight="Bold"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#E0E0E0" Offset="0"/>
                                            <GradientStop Color="#C0C0C0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6" 
                                                   Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="8" Opacity="0.3"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#E0E0E0" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="âž•" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Transaction"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- CONTENT AREA -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
