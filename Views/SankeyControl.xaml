<UserControl x:Class="NexusFinance.Views.SankeyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border Background="#CC252526" 
            CornerRadius="12" 
            BorderBrush="#505050" 
            BorderThickness="1"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- HEADER -->
            <TextBlock Grid.Row="0" 
                      Text="ðŸ’¸ Cash Flow Sankey" 
                      FontSize="20" 
                      FontWeight="SemiBold" 
                      Foreground="#E0E0E0" 
                      Margin="0,0,0,20"/>
            
            <!-- SANKEY CANVAS -->
            <Canvas x:Name="SankeyCanvas" 
                   Grid.Row="1" 
                   Background="Transparent"
                   Height="600"
                   ClipToBounds="True"/>
            
        </Grid>
    </Border>
</UserControl>
