<UserControl x:Class="NexusFinance.Views.WalletView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- HEADER -->
            <Grid Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="ðŸ‘› Wallet and Investments" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="#E0E0E0"/>
                    <TextBlock Text="Track your accounts and investment portfolio" 
                              FontSize="14" 
                              Foreground="#606060" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- TOTAL BALANCE - GLASS -->
            <Border Background="#CC252526" CornerRadius="12" Padding="30" Margin="0,0,0,20"
                   BorderBrush="#505050" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ’° Total Balance" 
                              FontSize="16" 
                              Foreground="#AAAAAA" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding TotalBalance, StringFormat='â‚½{0:N0}'}" 
                              FontSize="48" 
                              FontWeight="Bold" 
                              Foreground="#E0E0E0" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Across all accounts" 
                              FontSize="14" 
                              Foreground="#606060" 
                              HorizontalAlignment="Center" 
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- ACCOUNTS - GLASS -->
            <Border Background="#CC252526" CornerRadius="12" Padding="20" Margin="0,0,0,20"
                   BorderBrush="#505050" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="ðŸ¦ Accounts" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  Foreground="#E0E0E0" 
                                  VerticalAlignment="Center"/>
                        <Button Content="âž• Add Account" 
                               Command="{Binding AddAccountCommand}"
                               HorizontalAlignment="Right"
                               Foreground="Black"
                               BorderBrush="#808080"
                               BorderThickness="1"
                               Padding="15,8"
                               FontSize="12"
                               FontWeight="Bold"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#E0E0E0" Offset="0"/>
                                                <GradientStop Color="#C0C0C0" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6" 
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                                        <GradientStop Color="#E0E0E0" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <ItemsControl ItemsSource="{Binding Accounts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="16" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Institution}" 
                                                      FontSize="12" 
                                                      Foreground="#B0B0B0" 
                                                      Margin="0,5,0,0"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding Balance, StringFormat='â‚½{0:N0}'}" 
                                                  FontSize="20" 
                                                  FontWeight="Bold" 
                                                  Foreground="{Binding Color}" 
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,15,0"/>
                                        
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="âœï¸" 
                                                   Command="{Binding DataContext.EditAccountCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding Name}"
                                                   Background="Transparent"
                                                   Foreground="#AAAAAA"
                                                   BorderThickness="0"
                                                   FontSize="14"
                                                   Padding="5"
                                                   Cursor="Hand"
                                                   ToolTip="Edit Account"/>
                                            <Button Content="ðŸ—‘ï¸" 
                                                   Command="{Binding DataContext.DeleteAccountCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding Name}"
                                                   Background="Transparent"
                                                   Foreground="#D50000"
                                                   BorderThickness="0"
                                                   FontSize="14"
                                                   Padding="5"
                                                   Cursor="Hand"
                                                   ToolTip="Delete Account"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- INVESTMENTS - GLASS -->
            <Border Background="#CC252526" CornerRadius="12" Padding="20"
                   BorderBrush="#505050" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“Š Investments" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  Foreground="#E0E0E0"
                                  VerticalAlignment="Center"/>
                        <Button Content="âž• Add Investment" 
                               Command="{Binding AddInvestmentCommand}"
                               HorizontalAlignment="Right"
                               Foreground="Black"
                               BorderBrush="#808080"
                               BorderThickness="1"
                               Padding="15,8"
                               FontSize="12"
                               FontWeight="Bold"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#E0E0E0" Offset="0"/>
                                                <GradientStop Color="#C0C0C0" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6" 
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                                        <GradientStop Color="#E0E0E0" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <Grid Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Return: " 
                                      FontSize="14" 
                                      Foreground="#B0B0B0" 
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalReturn, StringFormat='â‚½{0:N0}'}" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="#00E676" 
                                      Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <ItemsControl ItemsSource="{Binding Investments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="16" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="White"/>
                                            <TextBlock FontSize="12" Foreground="#B0B0B0" Margin="0,5,0,0">
                                                <Run Text="Invested: "/>
                                                <Run Text="{Binding Invested, StringFormat='â‚½{0:N0}'}" FontWeight="SemiBold"/>
                                                <Run Text=" â†’ Current: "/>
                                                <Run Text="{Binding CurrentValue, StringFormat='â‚½{0:N0}'}" Foreground="#00E676" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="1" 
                                               Background="{Binding Color}" 
                                               CornerRadius="4" 
                                               Padding="10,5" 
                                               Margin="0,0,20,0"
                                               VerticalAlignment="Center">
                                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="Black">
                                                <Run Text="{Binding ReturnPercent, StringFormat='+{0:N1};-{0:N1};0'}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding CurrentValue, StringFormat='â‚½{0:N0}'}" 
                                                  FontSize="20" 
                                                  FontWeight="Bold" 
                                                  Foreground="{Binding Color}" 
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,15,0"/>
                                        
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="âœï¸" 
                                                   Command="{Binding DataContext.EditInvestmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding Name}"
                                                   Background="Transparent"
                                                   Foreground="#AAAAAA"
                                                   BorderThickness="0"
                                                   FontSize="14"
                                                   Padding="5"
                                                   Cursor="Hand"
                                                   ToolTip="Edit Investment"/>
                                            <Button Content="ðŸ—‘ï¸" 
                                                   Command="{Binding DataContext.DeleteInvestmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding Name}"
                                                   Background="Transparent"
                                                   Foreground="#D50000"
                                                   BorderThickness="0"
                                                   FontSize="14"
                                                   Padding="5"
                                                   Cursor="Hand"
                                                   ToolTip="Delete Investment"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
