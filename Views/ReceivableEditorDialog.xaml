<Window x:Class="NexusFinance.Views.ReceivableEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receivable Editor" 
        Height="650" Width="600"
        Background="#050505"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Border Background="#CC252526" 
           CornerRadius="12" 
           BorderBrush="#505050"
           BorderThickness="1"
           Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30">
            
            <!-- HEADER -->
            <TextBlock Text="ðŸ’° Receivable (Money Owed to Me)" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#E0E0E0" 
                      Margin="0,0,0,30"/>

            <!-- TITLE -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Title / Description" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="TitleBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- DEBTOR NAME -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Debtor (Who Owes Me)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="DebtorBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- AMOUNT -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Amount (â‚½)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="AmountBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14"
                        Text="0">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- PROJECT (OPTIONAL) -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Related Project (Optional)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <ComboBox x:Name="ProjectBox"
                         Background="#CC252526"
                         Foreground="White"
                         BorderBrush="#505050"
                         BorderThickness="1"
                         Padding="15"
                         FontSize="14">
                    <ComboBoxItem Content="(None)" IsSelected="True"/>
                </ComboBox>
            </StackPanel>

            <!-- PROBABILITY -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Probability / Confidence" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <ComboBox x:Name="ProbabilityBox"
                         Background="#CC252526"
                         Foreground="White"
                         BorderBrush="#505050"
                         BorderThickness="1"
                         Padding="15"
                         FontSize="14">
                    <ComboBoxItem Content="Confirmed (100%)" IsSelected="True"/>
                    <ComboBoxItem Content="Likely (75%)"/>
                    <ComboBoxItem Content="Uncertain (40%)"/>
                </ComboBox>
            </StackPanel>

            <!-- EXPECTED DATE -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Expected Receive Date" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <DatePicker x:Name="ExpectedDateBox"
                           Background="#CC252526"
                           Foreground="White"
                           BorderBrush="#505050"
                           BorderThickness="1"
                           Padding="15"
                           FontSize="14"/>
            </StackPanel>

            <!-- BUTTONS -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SAVE BUTTON -->
                <Button Grid.Column="0"
                       Content="âœ… Save" 
                       Click="SaveButton_Click"
                       Foreground="Black"
                       BorderBrush="#808080"
                       Style="{StaticResource DarkGradientButton}"
                       Margin="0,0,10,0"/>

                <!-- CANCEL BUTTON -->
                <Button Grid.Column="1"
                       Content="Cancel" 
                       Click="CancelButton_Click"
                       Style="{StaticResource StealthOutlineButton}"
                       Margin="10,0,0,0"/>
            </Grid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
