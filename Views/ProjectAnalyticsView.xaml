<UserControl x:Class="NexusFinance.Views.ProjectAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- HEADER -->
            <Grid Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="ðŸš€ Project Analytics" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="#E0E0E0"/>
                    <TextBlock Text="Deep dive into project performance and costs" 
                              FontSize="14" 
                              Foreground="#606060" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- PROJECT SELECTOR - GLASS -->
            <Border Background="#CC252526" CornerRadius="12" Padding="20" Margin="0,0,0,20"
                   BorderBrush="#505050" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="Select Project" FontSize="16" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                        <Button Content="âž• Add Project" 
                               Command="{Binding AddProjectCommand}"
                               HorizontalAlignment="Right"
                               Style="{StaticResource DarkGradientButton}"
                               Padding="15,8"
                               FontSize="12"/>
                    </Grid>
                    <ItemsControl ItemsSource="{Binding Projects}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,10,10">
                                    <Button Content="{Binding}" 
                                           Command="{Binding DataContext.SelectProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           Background="#CC1E1E1E"
                                           Foreground="White"
                                           BorderThickness="1"
                                           BorderBrush="#505050"
                                           Padding="20,10,50,10"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    
                                    <!-- EDIT/DELETE BUTTONS -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                                        <Button Content="âœï¸" 
                                               Command="{Binding DataContext.EditProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding Name}"
                                               Background="Transparent"
                                               Foreground="#AAAAAA"
                                               BorderThickness="0"
                                               FontSize="12"
                                               Padding="5"
                                               Cursor="Hand"
                                               ToolTip="Edit Project"/>
                                        <Button Content="ðŸ—‘ï¸" 
                                               Command="{Binding DataContext.DeleteProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding Name}"
                                               Background="Transparent"
                                               Foreground="#D50000"
                                               BorderThickness="0"
                                               FontSize="12"
                                               Padding="5"
                                               Cursor="Hand"
                                               ToolTip="Delete Project"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- PROJECT SUMMARY CARDS -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Revenue - GLASS -->
                <Border Grid.Column="0" Background="#CC252526" CornerRadius="12" Padding="20" Margin="0,0,10,0"
                       BorderBrush="#505050" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Total Revenue" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TotalRevenue, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#00C853"/>
                    </StackPanel>
                </Border>

                <!-- Total Cost - GLASS -->
                <Border Grid.Column="1" Background="#CC252526" CornerRadius="12" Padding="20" Margin="5,0,5,0"
                       BorderBrush="#505050" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ’¸ Total Cost" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TotalCost, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#D50000"/>
                    </StackPanel>
                </Border>

                <!-- Net Profit - GLASS -->
                <Border Grid.Column="2" Background="#CC252526" CornerRadius="12" Padding="20" Margin="5,0,5,0"
                       BorderBrush="#505050" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Net Profit" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding NetProfit, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#C0C0C0"/>
                    </StackPanel>
                </Border>

                <!-- Profit Margin - GLASS -->
                <Border Grid.Column="3" Background="#CC252526" CornerRadius="12" Padding="20" Margin="10,0,0,0"
                       BorderBrush="#505050" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ Profit Margin" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding ProfitMargin, StringFormat='{}{0:N1}%'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#909090"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ALL PROJECTS TABLE - GLASS -->
            <Border Background="#CC252526" CornerRadius="12" Padding="20"
                   BorderBrush="#505050" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ All Projects Overview" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="#E0E0E0" 
                              Margin="0,0,0,15"/>
                    
                    <DataGrid ItemsSource="{Binding ProjectSummaries}"
                             AutoGenerateColumns="False"
                             Background="Transparent"
                             RowBackground="#252526"
                             AlternatingRowBackground="#2A2A2A"
                             BorderThickness="0"
                             GridLinesVisibility="None"
                             HeadersVisibility="Column"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Foreground" Value="#B0B0B0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="15"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Project Name" Binding="{Binding Name}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Revenue" Binding="{Binding Revenue, StringFormat='â‚½{0:N0}'}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#00E676"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat='â‚½{0:N0}'}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FF1744"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Profit" Binding="{Binding Profit, StringFormat='â‚½{0:N0}'}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#C0C0C0"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- TEAM & PAYROLL SECTION -->
            <Border Background="#CC252526" 
                   CornerRadius="12" 
                   Padding="20"
                   Margin="0,30,0,0"
                   BorderBrush="#505050" 
                   BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="ðŸ‘¥ Team &amp; Payroll" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  Foreground="#E0E0E0"
                                  VerticalAlignment="Center"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Border Background="#CC1E1E1E" 
                                   CornerRadius="6" 
                                   Padding="15,8"
                                   BorderBrush="#D50000"
                                   BorderThickness="1"
                                   Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Total Monthly Payroll: " 
                                              FontSize="12" 
                                              Foreground="#909090"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalMonthlyPayroll, StringFormat='â‚½{0:N0}'}" 
                                              FontSize="16" 
                                              FontWeight="Bold" 
                                              Foreground="#FF5252"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Button Content="âž• Add Member" 
                                   Command="{Binding AddTeamMemberCommand}"
                                   Foreground="Black"
                                   BorderBrush="#808080"
                               Style="{StaticResource DarkGradientButton}"
                               Padding="15,8"
                               FontSize="12"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- TEAM MEMBERS TABLE -->
                    <DataGrid ItemsSource="{Binding TeamMembers}"
                             AutoGenerateColumns="False"
                             Background="Transparent"
                             Foreground="#E0E0E0"
                             BorderThickness="0"
                             HeadersVisibility="Column"
                             GridLinesVisibility="None"
                             RowBackground="#0A000000"
                             AlternatingRowBackground="#0FFFFFFF"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             RowHeight="45">
                        
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#808080"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#202020"/>
                            </Style>
                            
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="NAME" 
                                               Binding="{Binding Name}" 
                                               Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="ROLE" 
                                               Binding="{Binding Role}" 
                                               Width="200">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#909090"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="SALARY" 
                                               Binding="{Binding Salary, StringFormat='â‚½{0:N0}'}" 
                                               Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#C0C0C0"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="FREQUENCY" 
                                               Binding="{Binding PaymentFrequency}" 
                                               Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#707070"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="MONTHLY COST" 
                                               Binding="{Binding MonthlyCost, StringFormat='â‚½{0:N0}'}" 
                                               Width="140">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FF5252"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTemplateColumn Header="STATUS" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusColor}" 
                                               CornerRadius="4" 
                                               Padding="8,4"
                                               HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding StatusDisplay}" 
                                                      FontSize="10" 
                                                      FontWeight="Bold" 
                                                      Foreground="Black"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTemplateColumn Header="ACTIONS" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="âœï¸" 
                                                   Command="{Binding DataContext.EditTeamMemberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding Id}"
                                                   Background="Transparent"
                                                   Foreground="#AAAAAA"
                                                   BorderThickness="0"
                                                   FontSize="13"
                                                   Padding="6"
                                                   Cursor="Hand"
                                                   ToolTip="Edit Member"/>
                                            <Button Content="ðŸ—‘ï¸" 
                                                   Command="{Binding DataContext.DeleteTeamMemberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding Id}"
                                                   Background="Transparent"
                                                   Foreground="#D50000"
                                                   BorderThickness="0"
                                                   FontSize="13"
                                                   Padding="6"
                                                   Cursor="Hand"
                                                   ToolTip="Delete Member"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- EMPTY STATE -->
                    <TextBlock FontSize="13"
                              Foreground="#505050"
                              HorizontalAlignment="Center"
                              Margin="0,30,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TeamMembers.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Text" Value="No team members yet. Click âž• Add Member to build your team."/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
