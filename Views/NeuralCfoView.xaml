<UserControl x:Class="NexusFinance.Views.NeuralCfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="ðŸ¤– Neural CFO" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#E0E0E0"/>
                <TextBlock Text="{Binding StatusMessage}" 
                          FontSize="14" 
                          Foreground="#B0B0B0" 
                          Margin="0,5,0,0"/>
            </StackPanel>
            
            <Button Grid.Column="1"
                   Content="ðŸ—‘ï¸ Clear Chat" 
                   Command="{Binding ClearHistoryCommand}"
                   Background="#252526"
                   Foreground="#B0B0B0"
                   BorderThickness="0"
                   Padding="20,10"
                   FontSize="14"
                   Cursor="Hand"
                   VerticalAlignment="Top">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="8" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- CHAT AREA -->
        <Border Grid.Row="1" 
               Background="#1E1E1E" 
               CornerRadius="12" 
               Padding="20" 
               Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ChatHistory}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,20">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#252526"/>
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                <Setter Property="Background" Value="#CC505050"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="MaxWidth" Value="600"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Border CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Sender}" 
                                                  FontSize="12" 
                                                  FontWeight="Bold" 
                                                  Foreground="#B0B0B0" 
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Message}" 
                                                  FontSize="14" 
                                                  Foreground="White" 
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- INPUT AREA -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- QUICK ACTIONS -->
                <WrapPanel Grid.Row="0" Margin="0,0,0,15">
                    <Button Content="ðŸ’¡ Analyze my finances" 
                           Command="{Binding AskSampleCommand}"
                           CommandParameter="Analyze my current financial situation. What are the biggest risks?"
                           Background="#252526"
                           Foreground="#B0B0B0"
                           BorderThickness="0"
                           Padding="15,8"
                           Margin="0,0,10,0"
                           FontSize="13"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       CornerRadius="6" 
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Content="ðŸš¨ Check runway" 
                           Command="{Binding AskSampleCommand}"
                           CommandParameter="How many months can I survive with current spending?"
                           Background="#252526"
                           Foreground="#B0B0B0"
                           BorderThickness="0"
                           Padding="15,8"
                           Margin="0,0,10,0"
                           FontSize="13"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       CornerRadius="6" 
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Content="âš¡ Optimize spending" 
                           Command="{Binding AskSampleCommand}"
                           CommandParameter="Where can I cut costs without hurting my business?"
                           Background="#252526"
                           Foreground="#B0B0B0"
                           BorderThickness="0"
                           Padding="15,8"
                           FontSize="13"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       CornerRadius="6" 
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </WrapPanel>

                <!-- TEXT INPUT -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                            Text="{Binding UserQuestion, UpdateSourceTrigger=PropertyChanged}"
                            Background="#CC252526"
                            Foreground="White"
                            BorderBrush="#505050"
                            BorderThickness="1"
                            Padding="15"
                            FontSize="14"
                            Margin="0,0,10,0"
                            IsEnabled="{Binding IsAnalyzing, Converter={StaticResource InverseBoolConverter}}">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendQuestionCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Column="1"
                           Content="ðŸš€ Send" 
                           Command="{Binding SendQuestionCommand}"
                           Foreground="Black"
                           BorderBrush="#808080"
                           BorderThickness="1"
                           Padding="30,15"
                           FontSize="14"
                           FontWeight="Bold"
                           Cursor="Hand"
                           IsEnabled="{Binding IsAnalyzing, Converter={StaticResource InverseBoolConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#E0E0E0" Offset="0"/>
                                            <GradientStop Color="#C0C0C0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="6" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#E0E0E0" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
