<Window x:Class="NexusFinance.Views.ProjectEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Editor" 
        Height="500" Width="600"
        Background="#050505"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Border Background="#CC252526" 
           CornerRadius="12" 
           BorderBrush="#505050"
           BorderThickness="1"
           Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- SCROLLABLE CONTENT -->
            <ScrollViewer Grid.Row="0"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Style="{StaticResource StealthScrollViewerStyle}"
                         Margin="0,0,-10,0">
                <StackPanel Margin="0,0,10,20">
                    
                    <!-- HEADER -->
                    <TextBlock Text="ðŸ“Š Project Editor" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#E0E0E0" 
                              Margin="0,0,0,30"/>

                    <!-- PROJECT NAME -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Project Name" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="ProjectNameBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- DESCRIPTION -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Description" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="DescriptionBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14"
                        Height="80"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- REVENUE -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Revenue (â‚½)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="RevenueBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14"
                        Text="0">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

                    <!-- COST -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Cost (â‚½)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <TextBox x:Name="CostBox"
                                Background="#CC252526"
                                Foreground="White"
                                BorderBrush="#505050"
                                BorderThickness="1"
                                Padding="15"
                                FontSize="14"
                                Text="0">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>

            <!-- BUTTONS -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SAVE BUTTON -->
                <Button Grid.Column="0"
                       Content="âœ… Save" 
                       Click="SaveButton_Click"
                       Foreground="Black"
                       BorderBrush="#808080"
                       Style="{StaticResource DarkGradientButton}"
                       Margin="0,0,10,0"/>

                <!-- CANCEL BUTTON -->
                <Button Grid.Column="1"
                       Content="Cancel" 
                       Click="CancelButton_Click"
                       Style="{StaticResource StealthOutlineButton}"
                       Margin="10,0,0,0"/>
            </Grid>
            
        </Grid>
    </Border>
</Window>
