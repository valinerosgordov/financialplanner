<UserControl x:Class="NexusFinance.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:loc="clr-namespace:NexusFinance.Services"
             Background="#050505">
    
    <UserControl.Resources>
        <!-- GLASS PANEL STYLE -->
        <Style x:Key="GlassPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#CC181818"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="15" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- KPI TITLE STYLE -->
        <Style x:Key="KpiTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <!-- KPI VALUE STYLE -->
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- SECTION HEADER STYLE -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#C0C0C0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- KPI Cards -->
                <RowDefinition Height="Auto"/> <!-- Main Analytics -->
                <RowDefinition Height="Auto"/> <!-- Activity Feed -->
            </Grid.RowDefinitions>
            
            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Dashboard" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#E0E0E0"/>
                    <TextBlock Text="Financial Overview &amp; Performance" 
                              FontSize="13" 
                              Foreground="#606060" 
                              Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Content="ðŸ”„ Refresh" 
                       Command="{Binding RefreshCommand}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       BorderBrush="#808080"
                       BorderThickness="1"
                       Style="{StaticResource DarkGradientButton}"
                       Padding="15,8"
                       FontSize="11"/>
            </Grid>
            
            <!-- TOP ROW: ADVANCED KPI CARDS -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- NET WORTH CARD -->
                <Border Grid.Column="0" Style="{StaticResource GlassPanelStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                  Text="NET WORTH" 
                                  Style="{StaticResource KpiTitleStyle}"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding NetWorth, StringFormat='â‚½{0:N0}'}" 
                                  Style="{StaticResource KpiValueStyle}"
                                  VerticalAlignment="Center"/>
                        
                        <!-- SPARKLINE (Placeholder) -->
                        <Border Grid.Row="2" 
                               Background="#0CFFFFFF" 
                               CornerRadius="4" 
                               Margin="0,10,0,0">
                            <TextBlock Text="ðŸ“ˆ Trend" 
                                      FontSize="10" 
                                      Foreground="#505050" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- MONTHLY INCOME CARD -->
                <Border Grid.Column="2" Style="{StaticResource GlassPanelStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                  Text="MONTHLY INCOME" 
                                  Style="{StaticResource KpiTitleStyle}"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding MonthlyIncome, StringFormat='â‚½{0:N0}'}" 
                                  Style="{StaticResource KpiValueStyle}"
                                  Foreground="#00C853"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- MONTHLY EXPENSE CARD -->
                <Border Grid.Column="4" Style="{StaticResource GlassPanelStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                  Text="MONTHLY EXPENSE" 
                                  Style="{StaticResource KpiTitleStyle}"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding MonthlyExpense, StringFormat='â‚½{0:N0}'}" 
                                  Style="{StaticResource KpiValueStyle}"
                                  Foreground="#D50000"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- SAVINGS RATE CARD -->
                <Border Grid.Column="6" Style="{StaticResource GlassPanelStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                  Text="SAVINGS RATE" 
                                  Style="{StaticResource KpiTitleStyle}"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding SavingsRate, StringFormat='{}{0:F1}%'}" 
                                  Style="{StaticResource KpiValueStyle}"
                                  Foreground="#C0C0C0"
                                  VerticalAlignment="Center"/>
                        
                        <Border Grid.Row="2" 
                               Background="#0CFFFFFF" 
                               CornerRadius="4" 
                               Margin="0,10,0,0">
                            <ProgressBar Value="{Binding SavingsRate}" 
                                        Maximum="100"
                                        Height="12"
                                        Background="#202020"
                                        Foreground="#00C853"
                                        BorderThickness="0"
                                        Margin="10,0"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- MIDDLE ROW: MAIN ANALYTICS -->
            <Grid Grid.Row="2" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- LEFT: MAIN CHART -->
                <Border Grid.Column="0" Style="{StaticResource GlassPanelStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¹ Financial Performance (Last 6 Months)" 
                                  Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- LiveCharts2 Chart -->
                        <Border Background="#0A000000" 
                               CornerRadius="8" 
                               Height="350"
                               BorderBrush="#202020"
                               BorderThickness="1">
                            <lvc:CartesianChart Series="{Binding Series}"
                                              XAxes="{Binding XAxes}"
                                              YAxes="{Binding YAxes}"
                                              TooltipPosition="Hidden"
                                              Background="Transparent"
                                              LegendPosition="Hidden"/>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- RIGHT: EXPENSE BREAKDOWN -->
                <Border Grid.Column="2" Style="{StaticResource GlassPanelStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Expense Structure" 
                                  Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- Pie Chart Placeholder -->
                        <Border Background="#0A000000" 
                               CornerRadius="8" 
                               Height="300"
                               BorderBrush="#202020"
                               BorderThickness="1"
                               Margin="0,0,0,15">
                            <Grid>
                                <Ellipse Width="120" 
                                        Height="120" 
                                        Stroke="#303030" 
                                        StrokeThickness="2"
                                        Fill="Transparent"/>
                                <TextBlock Text="Donut Chart" 
                                          FontSize="12" 
                                          Foreground="#404040" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Top Expenses List -->
                        <ItemsControl ItemsSource="{Binding TopExpenses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0CFFFFFF" 
                                           CornerRadius="6" 
                                           Padding="12,8" 
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                      Text="{Binding Name}" 
                                                      FontSize="12" 
                                                      Foreground="#C0C0C0"
                                                      VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding Amount, StringFormat='â‚½{0:N0}'}" 
                                                      FontSize="12" 
                                                      Foreground="#D50000"
                                                      FontWeight="Bold"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- BOTTOM ROW: RECENT ACTIVITY (Compact) -->
            <Border Grid.Row="3" Style="{StaticResource GlassPanelStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="âš¡ Recent Transactions" 
                                  Style="{StaticResource SectionHeaderStyle}"
                                  Margin="0"/>
                        <TextBlock Text="Last 10 entries" 
                                  FontSize="11" 
                                  Foreground="#505050"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"/>
                    </Grid>
                    
                    <DataGrid ItemsSource="{Binding RecentTransactions}"
                             AutoGenerateColumns="False"
                             Background="Transparent"
                             Foreground="#E0E0E0"
                             BorderThickness="0"
                             HeadersVisibility="Column"
                             GridLinesVisibility="None"
                             RowBackground="#0A000000"
                             AlternatingRowBackground="#0FFFFFFF"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             RowHeight="38">
                        
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#808080"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#202020"/>
                            </Style>
                            
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="DATE" 
                                               Binding="{Binding Date, StringFormat='MMM dd'}" 
                                               Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#909090"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="DESCRIPTION" 
                                               Binding="{Binding Description}" 
                                               Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="CATEGORY" 
                                               Binding="{Binding Category}" 
                                               Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#707070"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="PROJECT" 
                                               Binding="{Binding Project}" 
                                               Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#606060"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="AMOUNT" 
                                               Binding="{Binding Amount, StringFormat='â‚½{0:N0}'}" 
                                               Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#00C853"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                                <Setter Property="Foreground" Value="#D50000"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            
        </Grid>
    </ScrollViewer>
</UserControl>
