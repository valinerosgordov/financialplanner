<UserControl x:Class="NexusFinance.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:NexusFinance.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <UserControl.DataContext>
        <viewModels:SettingsViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" MaxWidth="800">
            
            <!-- HEADER -->
            <Grid Margin="0,0,0,40">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ Settings" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="#E0E0E0"/>
                    <TextBlock Text="Configure AI and application settings" 
                              FontSize="16" 
                              Foreground="#606060" 
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- AI CONFIGURATION SECTION -->
            <Border Background="#1E1E1E" 
                   CornerRadius="12" 
                   Padding="30" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ¤– Neural CFO Configuration" 
                              FontSize="24" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Google Gemini API Key" 
                              FontSize="14" 
                              Foreground="#B0B0B0" 
                              Margin="0,0,0,10"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                              FontSize="13" 
                              Foreground="#808080" 
                              Margin="0,0,0,15">
                        <Run Text="Your API key is encrypted using Windows DPAPI and stored locally."/>
                        <LineBreak/>
                        <Run Text="It can only be decrypted on this computer by your user account."/>
                    </TextBlock>
                    
                    <!-- API KEY INPUT -->
                    <PasswordBox x:Name="ApiKeyBox" 
                                FontSize="14" 
                                Background="#CC252526"
                                Foreground="White"
                                BorderBrush="#505050"
                                BorderThickness="1"
                                Padding="15"
                                Margin="0,0,0,15"
                                PasswordChanged="ApiKeyBox_PasswordChanged">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>
                    
                    <!-- ACTION BUTTONS -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                               Content="ðŸ’¾ Save API Key" 
                               Command="{Binding SaveApiKeyCommand}"
                               Foreground="Black"
                               BorderBrush="#808080"
                               BorderThickness="1"
                               Padding="20,12"
                               FontSize="14"
                               FontWeight="Bold"
                               Cursor="Hand"
                               Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#E0E0E0" Offset="0"/>
                                                <GradientStop Color="#C0C0C0" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6" 
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                                        <GradientStop Color="#E0E0E0" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Grid.Column="1"
                               Content="ðŸ§ª Test" 
                               Command="{Binding TestConnectionCommand}"
                               Background="#CC505050"
                               Foreground="White"
                               BorderBrush="#808080"
                               BorderThickness="1"
                               Padding="20,12"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Cursor="Hand"
                               Margin="0,0,10,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="8" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00D9E6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Grid.Column="2"
                               Content="ðŸ—‘ï¸ Delete" 
                               Command="{Binding DeleteApiKeyCommand}"
                               Background="#FF1744"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,12"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="8" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF2757"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    
                    <!-- STATUS MESSAGE -->
                    <Border Background="#252526" 
                           CornerRadius="8" 
                           Padding="15">
                        <TextBlock Text="{Binding StatusMessage}" 
                                  FontSize="14" 
                                  Foreground="{Binding StatusColor}" 
                                  TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- HOW TO GET API KEY -->
            <Border Background="#1E1E1E" 
                   CornerRadius="12" 
                   Padding="30">
                <StackPanel>
                    <TextBlock Text="ðŸ”‘ How to Get Your API Key" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                              FontSize="14" 
                              Foreground="#B0B0B0" 
                              Margin="0,0,0,20">
                        <Run Text="1. Visit Google AI Studio:"/>
                        <Run Text="https://ai.google.dev/" Foreground="#00BCD4" FontWeight="SemiBold"/>
                        <LineBreak/>
                        <Run Text="2. Sign in with your Google account"/>
                        <LineBreak/>
                        <Run Text="3. Click 'Get API Key' and create a new key"/>
                        <LineBreak/>
                        <Run Text="4. Copy the key (starts with 'AIza...')"/>
                        <LineBreak/>
                        <Run Text="5. Paste it above and click Save"/>
                    </TextBlock>
                    
                    <Button Content="ðŸŒ Open Google AI Studio" 
                           Command="{Binding OpenApiKeyLinkCommand}"
                           Background="#252526"
                           Foreground="#00BCD4"
                           BorderBrush="#00BCD4"
                           BorderThickness="2"
                           Padding="20,12"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           HorizontalAlignment="Left">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="8" 
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
