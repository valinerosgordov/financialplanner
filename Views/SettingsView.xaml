<UserControl x:Class="NexusFinance.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" MaxWidth="800">
            
            <!-- HEADER -->
            <Grid Margin="0,0,0,40">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ Settings" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="#E0E0E0"/>
                    <TextBlock Text="Configure AI and application settings" 
                              FontSize="16" 
                              Foreground="#606060" 
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- AI CONFIGURATION SECTION -->
            <Border Background="#1E1E1E" 
                   CornerRadius="12" 
                   Padding="30" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ¤– Neural CFO Configuration" 
                              FontSize="24" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Google Gemini API Key" 
                              FontSize="14" 
                              Foreground="#B0B0B0" 
                              Margin="0,0,0,10"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                              FontSize="13" 
                              Foreground="#808080" 
                              Margin="0,0,0,15">
                        <Run Text="Your API key is encrypted using Windows DPAPI and stored locally."/>
                        <LineBreak/>
                        <Run Text="It can only be decrypted on this computer by your user account."/>
                    </TextBlock>
                    
                    <!-- API KEY INPUT -->
                    <PasswordBox x:Name="ApiKeyBox" 
                                FontSize="14" 
                                Background="#CC252526"
                                Foreground="White"
                                BorderBrush="#505050"
                                BorderThickness="1"
                                Padding="15"
                                Margin="0,0,0,15"
                                PasswordChanged="ApiKeyBox_PasswordChanged">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>
                    
                    <!-- ACTION BUTTONS -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                               Content="Save API Key" 
                               Command="{Binding SaveApiKeyCommand}"
                               Style="{StaticResource DarkGradientButton}"/>
                        
                        <Button Grid.Column="2"
                               Content="Test" 
                               Command="{Binding TestConnectionCommand}"
                               Style="{StaticResource DarkGradientButton}"/>
                        
                        <Button Grid.Column="4"
                               Content="Delete" 
                               Command="{Binding DeleteApiKeyCommand}"
                               Style="{StaticResource DangerButton}"/>
                        
                    </Grid>
                    
                    <!-- STATUS MESSAGE -->
                    <Border Background="#252526" 
                           CornerRadius="8" 
                           Padding="15">
                        <TextBlock Text="{Binding StatusMessage}" 
                                  FontSize="14" 
                                  Foreground="{Binding StatusColor}" 
                                  TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- HOW TO GET API KEY -->
            <Border Background="#1E1E1E" 
                   CornerRadius="12" 
                   Padding="30">
                <StackPanel>
                    <TextBlock Text="ðŸ”‘ How to Get Your API Key" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                              FontSize="14" 
                              Foreground="#B0B0B0" 
                              Margin="0,0,0,20">
                        <Run Text="1. Visit Google AI Studio:"/>
                        <Run Text="https://ai.google.dev/" Foreground="#00BCD4" FontWeight="SemiBold"/>
                        <LineBreak/>
                        <Run Text="2. Sign in with your Google account"/>
                        <LineBreak/>
                        <Run Text="3. Click 'Get API Key' and create a new key"/>
                        <LineBreak/>
                        <Run Text="4. Copy the key (starts with 'AIza...')"/>
                        <LineBreak/>
                        <Run Text="5. Paste it above and click Save"/>
                    </TextBlock>
                    
                    <Button Content="Open Google AI Studio" 
                           Command="{Binding OpenApiKeyLinkCommand}"
                           Style="{StaticResource StealthOutlineButton}"
                           HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
            
            <!-- DATA MANAGEMENT SECTION -->
            <Border Background="#1E1E1E" 
                   CornerRadius="12" 
                   Padding="30"
                   Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="ðŸ’¾ Data Management" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Clear All Data" 
                              FontSize="14" 
                              Foreground="#B0B0B0"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="Remove all transactions, projects, accounts, investments, and other data from the application. This action cannot be undone." 
                              FontSize="13" 
                              Foreground="#808080"
                              TextWrapping="Wrap"
                              Margin="0,0,0,15"/>
                    
                    <Button Content="Clear All Data" 
                            Command="{Binding ClearAllDataCommand}"
                            Style="{StaticResource DangerButton}"
                            HorizontalAlignment="Left"
                            MinWidth="200"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
