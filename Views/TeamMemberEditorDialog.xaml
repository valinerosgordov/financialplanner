<Window x:Class="NexusFinance.Views.TeamMemberEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Member Editor" 
        Height="600" Width="600"
        Background="#050505"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Border Background="#CC252526" 
           CornerRadius="12" 
           BorderBrush="#505050"
           BorderThickness="1"
           Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30">
            
            <!-- HEADER -->
            <TextBlock Text="ðŸ‘¤ Team Member" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#E0E0E0" 
                      Margin="0,0,0,30"/>

            <!-- NAME -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Full Name" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="NameBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- ROLE -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Role / Position" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="RoleBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- SALARY -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Salary Amount (â‚½)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="SalaryBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14"
                        Text="0">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- PAYMENT FREQUENCY -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Payment Frequency" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <ComboBox x:Name="FrequencyBox"
                         Background="#CC252526"
                         Foreground="White"
                         BorderBrush="#505050"
                         BorderThickness="1"
                         Padding="15"
                         FontSize="14">
                    <ComboBoxItem Content="Monthly" IsSelected="True"/>
                    <ComboBoxItem Content="Hourly"/>
                    <ComboBoxItem Content="OneTime"/>
                </ComboBox>
            </StackPanel>

            <!-- ACTIVE STATUS -->
            <StackPanel Margin="0,0,0,30">
                <CheckBox x:Name="IsActiveBox"
                         Content="Active (currently working)"
                         Foreground="#E0E0E0"
                         FontSize="14"
                         IsChecked="True"/>
            </StackPanel>

            <!-- BUTTONS -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SAVE BUTTON -->
                <Button Grid.Column="0"
                       Content="âœ… Save" 
                       Click="SaveButton_Click"
                       Foreground="Black"
                       BorderBrush="#808080"
                       Style="{StaticResource DarkGradientButton}"
                       Margin="0,0,10,0"/>

                <!-- CANCEL BUTTON -->
                <Button Grid.Column="1"
                       Content="Cancel" 
                       Click="CancelButton_Click"
                       Style="{StaticResource StealthOutlineButton}"
                       Margin="10,0,0,0"/>
            </Grid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
