<Window x:Class="NexusFinance.Views.InvestmentEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Investment Editor" 
        Height="600" Width="600"
        Background="#050505"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Border Background="#CC252526" 
           CornerRadius="12" 
           BorderBrush="#505050"
           BorderThickness="1"
           Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30">
            
            <!-- HEADER -->
            <TextBlock Text="ðŸ“Š Investment Editor" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#E0E0E0" 
                      Margin="0,0,0,30"/>

            <!-- INVESTMENT NAME -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Investment Name" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="InvestmentNameBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- INVESTMENT TYPE -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Investment Type" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <ComboBox x:Name="TypeBox"
                         Background="#CC252526"
                         Foreground="White"
                         BorderBrush="#505050"
                         BorderThickness="1"
                         Padding="15"
                         FontSize="14">
                    <ComboBoxItem Content="Stock" IsSelected="True"/>
                    <ComboBoxItem Content="Crypto"/>
                    <ComboBoxItem Content="Bond"/>
                    <ComboBoxItem Content="ETF"/>
                    <ComboBoxItem Content="Mutual Fund"/>
                    <ComboBoxItem Content="Real Estate"/>
                    <ComboBoxItem Content="Commodity"/>
                </ComboBox>
            </StackPanel>

            <!-- INVESTED AMOUNT -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Invested Amount (â‚½)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="AmountBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14"
                        Text="0">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- CURRENT VALUE -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Current Value (â‚½)" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <TextBox x:Name="CurrentValueBox"
                        Background="#CC252526"
                        Foreground="White"
                        BorderBrush="#505050"
                        BorderThickness="1"
                        Padding="15"
                        FontSize="14"
                        Text="0">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- PURCHASE DATE -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Purchase Date" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                <DatePicker x:Name="PurchaseDateBox"
                           Background="#CC252526"
                           Foreground="White"
                           BorderBrush="#505050"
                           BorderThickness="1"
                           Padding="15"
                           FontSize="14"/>
            </StackPanel>

            <!-- BUTTONS -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SAVE BUTTON -->
                <Button Grid.Column="0"
                       Content="âœ… Save" 
                       Click="SaveButton_Click"
                       Foreground="Black"
                       BorderBrush="#808080"
                       Style="{StaticResource DarkGradientButton}"
                       Margin="0,0,10,0"/>

                <!-- CANCEL BUTTON -->
                <Button Grid.Column="1"
                       Content="Cancel" 
                       Click="CancelButton_Click"
                       Style="{StaticResource StealthOutlineButton}"
                       Margin="10,0,0,0"/>
            </Grid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
